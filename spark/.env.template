# AWS Configuration Template
# Copy this file to .env and fill in your actual values
# docker-compose will automatically load these variables

# AWS Credentials (Option 1: Direct credentials)
AWS_ACCESS_KEY_ID=your-access-key-here
AWS_SECRET_ACCESS_KEY=your-secret-key-here
AWS_SESSION_TOKEN=your-session-token-here-if-using-temporary-credentials

# AWS Region
AWS_DEFAULT_REGION=us-east-1

# S3 Configuration
AWS_S3_BUCKET=your-iceberg-warehouse-bucket
AWS_S3_ENDPOINT=s3.amazonaws.com

# Glue Catalog Configuration
AWS_GLUE_CATALOG_ID=your-aws-account-id
AWS_GLUE_REGION=us-east-1

# Optional: LocalStack for local AWS services testing
# LOCALSTACK_ENDPOINT=http://localstack:4566
